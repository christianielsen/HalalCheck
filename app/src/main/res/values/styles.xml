<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullscreenDialogTheme" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorLightBackground</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">0.3</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorSurfaceVariant">@color/purple_200</item>-->
    </style>
</resources>